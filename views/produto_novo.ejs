    <script>
        // Countdown Timer para produto
        let timeLeft = 2 * 60 * 60; // 2 horas em segundos
        
        function updateCountdown() {
            const hours = Math.floor(timeLeft / 3600);
            const minutes = Math.floor((timeLeft % 3600) / 60);
            const seconds = timeLeft % 60;
            
            const countdownElement = document.getElementById('countdown-product');
            if (countdownElement) {
                countdownElement.textContent = 
                    `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }
            
            if (timeLeft > 0) {
                timeLeft--;
            }
        }
        
        function comprarAgora() {
            // Aqui você pode integrar com sua plataforma de pagamento
            alert('Redirecionando para pagamento...\n\nIntegre aqui com:\n• Mercado Pago\n• PayPal\n• Stripe\n• Ou sua plataforma preferida');
